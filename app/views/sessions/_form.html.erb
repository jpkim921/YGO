<% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
<% end %>

<h1>Sign in</h1>

<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

    <%= f.label :email %><br>
    <%= f.text_field :email %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %>

    <%= f.submit "Sign In" %>
<% end %>
